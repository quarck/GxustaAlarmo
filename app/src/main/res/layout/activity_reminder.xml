<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reminder_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reminder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/reminder_activity_title_size"
        tools:text="@string/time_expired"/>

    <TextView
        android:id="@+id/reminder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/reminder_activity_text_size"
        tools:text="14:00"/>

    <Button
        android:id="@+id/buttonS1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shtap" />

    <Button
        android:id="@+id/buttonS2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dat" />

    <Button
        android:id="@+id/buttonS3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Now" />

    <Button
        android:id="@+id/buttonS4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plz" />


</LinearLayout>
